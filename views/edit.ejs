<%- include("header") -%>

<div class="edit-box">
  <form action="/update" method="post" class="details">
    <div class="edit-box-form">
      <hr />
      <input type="hidden" name="id" value="<%= newListItem._id %>" />

      <div class="form-group">
        <label for="uname">Name</label>
        <input
          type="text"
          required
          name="uname"
          value="<%= newListItem.name %>"
          placeholder="Enter Your Name"
        />
      </div>

      <div class="form-group">
        <label for="desc">Description</label>
        <input
          type="text"
          required
          name="desc"
          value="<%= newListItem.description %>"
          placeholder="Enter Your Name"
        />
      </div>
      <div class="form-group">
        <input type="submit" name="submit" value="submit" />
      </div>
      <hr />
    </div>
  </form>
</div>
