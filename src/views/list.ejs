<%- include("header") -%>
   
<h1 class="heading">Tasks</h1>

<div class="tabs">
<input type="radio" id="tab1" name="tab-control" checked>
  <input type="radio" id="tab2" name="tab-control">
  <input type="radio" id="tab3" name="tab-control">  
  
  <ul>
    <li title="Features">
      <label for="tab1" role="button" 
      class="<%= !url ? 'current-tab-indicator' : '' %>"
    ><br /><a href = '/'>All  </a></label>
    </li>
    <li title="upcoming">
      <label for="tab2" role="button" 
        class="<%= url === 'upcoming' ? 'current-tab-indicator' : '' %>"
        ><br /><a href = "?status=upcoming">Upcoming</a></label
      >
    </li>
    <li title="completed">
      <label for="tab3" role="button"
      class="<%= url === 'completed' ? 'current-tab-indicator' : '' %>"
      ><br /><a href= '?status=completed'>Completed</a></label>
    </li>
  </ul>
    
    <div class="content">
        <section>
            <h1>Tasks</h1>
            <h3><%= newListItem.length  %> tasks found</h3>
            <% if(locals.error){ %>
                <button onclick="window.location.reload()">Reload</button>
            <% } else { %>
                <% for(var i=0;i<newListItem.length;i++) { %>
                <form action="/delete" method="post" class="details">
                    <div class="items">
                        <div class="division">
                            <div class="date-box">
                                <p>Date: <%= newListItem[i].date%></p>
                                <p>Time: <%= newListItem[i].time%></p>
                            </div>
                            <div class="desc-box">
                                <p>Name:  <%= newListItem[i].name %></p>
                                <p>Description: <%= newListItem[i].description %></p>
                            </div>
                            
                            <div class="button-box">
                                <a href="/edit/<%= newListItem[i]._id %>" class="action">Edit</a>
                                <a href="/delete/<%= newListItem[i]._id %>" class="action">Delete</a>
                        
                            </div>
                        </div>
                        <br>
                    </div>         
                </form> 
                <% } %>
            
            <% } %>
        </section>
        <section>
            <h1>Upcoming Tasks</h1>
        </section>   
        <section>
            <h1>Compelted Tasks</h1>
        </section>
    </div>  
    <div class="title-form"><h2>Fill in the forms to add the items</h2></div>
    <div class="formm">
        <form class="input-form-box" action="/" method="post">
            <div class="form-boxx">
                <label for="name" class="input-label">Name</label>
                <input type="text" name="name"  class="form-input" required>
            </div>
            <div class="form-boxx">
                <label for="name" class="input-label">Description</label>
                <textarea type="text"  name="description" required rows="5" cols="50"></textarea>
            </div>
            <div class="form-boxx">
                <label for="name" class="input-label">Date</label>
                <input type="date" name="date"  class="form-input" pattern="\d{4}-\d{2}-\d{2}"required>
            </div>
            <div class="form-boxx">
                <label for="name" class="input-label">Time</label>
                <input type="time" name="time" class="form-input" required>
            </div>
            <div class="form-boxx form-box1">
                <button class="action b1" type="submit"><span class="s2">Add</span></button>
            </div>
        </form>
    </div>
    </div>
    
    
    
    
</div>
    
    
    
    




    
        
        
       
        
            

            
            
      