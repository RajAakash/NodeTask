<%- include("header") -%>
  
  
<h1 class="heading">Tasks</h1>



<div class="tabs">
    <div class="tabs-content">
        <ul>
            <li title="Features">
              <label for="tab1" role="button"><br /><span>All  </span></label>
            </li>
            <li title="upcoming">
              <label for="tab2" role="button"
                ><br /><span>Upcoming</span></label
              >
            </li>
            <li title="completed">
              <label for="tab3" role="button"><br /><span>Completed</span></label>
            </li>
          </ul>  
    </div>
    <div class="slider"><div class="indicator"></div></div>  
    
    
<% if(locals.error){ %>
    <button onclick="window.location.reload()">Reload</button>
<% } else { %>
    <% for(var i=0;i<newListItem.length;i++) { %>
    <form action="/delete" method="post" class="details">
        <div class="items">
            <div class="division">
                <div class="date-box">
                    <p>Date: <%= newListItem[i].date%></p>
                    <p>Time: <%= newListItem[i].time%></p>
                </div>
                <div class="desc-box">
                    <p>Name:  <%= newListItem[i].name %></p>
                    <p>Description:  <%= newListItem[i].description %></p>
                </div>
                
                <div class="button-box">
                    <button class="b"><a href="/edit/<%= newListItem[i]._id %>">Edit</a></button>
                    <button class="b"><a href="/delete/<%= newListItem[i]._id %>">Delete</a></button>
            
                </div>
            </div>
            <br>
        </div>         
    </form> 
    <% } %>

<% } %>

<div class="title-form"><h2>Fill in the forms to add the items</h2></div>

    <form class="input-form" action="/" method="post">
        <div class="form-box">
            <div class="label-box1"><label for="name">Name</label></div>
            <div><input type="text" name="name"  class="form-input" required></div>
        </div>
        <div class="form-box">
            <div class="label-box1"><label for="name">Description</label></div>
            <div><textarea class="form-input" name="description" required rows="5" cols="50"></textarea></div>
        </div>
        <div class="form-box">
            <div class="label-box1"><label for="name">Date</label></div>
            <div><input type="date" name="date" class="date-picker" class="form-input" pattern="\d{4}-\d{2}-\d{2}"required></div>
        </div>
        <div class="form-box">
            <div class="label-box1"><label for="name">Time</label></div>
            <div><input type="time" name="time" class="time-picker" class="form-input" required></div>
        </div>
        <div class="form-box">
            <div></div>
            <div><button class="b" type="submit"><span class="s2">Add</span></button></div>  
        </div>
        
    </form>
</div>